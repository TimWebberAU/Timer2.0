<TimerLayout>

    hours: hours
    minutes: minutes
    seconds: seconds

    MDGridLayout:
        cols: 1
        size: root.width, root.height
        spacing: 10

        MDLabel:
            text: "NEEDY  TIMER"
            halign: "center"
            font_name: 'Fonts/Shrikhand-Regular.ttf'
            font_size: 30
            theme_text_color: "Custom"
            text_color: "violet"

        MDGridLayout:
            cols: 3

            MDLabel:
                id: slider_hours_label
                text: "0 Hours"
                halign: "center"
                theme_text_color: "Primary"
            MDLabel:
                id: slider_minutes_label
                text: "0 Minutes"
                halign: "center"
                theme_text_color: "Primary"
            MDLabel:
                id: slider_seconds_label
                text: "0 Seconds"
                halign: "center"
                theme_text_color: "Primary"

            MDSlider:
                id: hours
                min: 0
                max: 24
                value: 0
                step: 1
                orientation: "vertical"
                size_hint_y: None
                height: '140dp'
                on_value: slider_hours_label.text = f"{int(self.value)} Hours"
            MDSlider:
                id: minutes
                min: 0
                max: 60
                value: 0
                step: 1
                orientation: "vertical"
                size_hint_y: None
                height: '140dp'
                on_value: slider_minutes_label.text = f"{int(self.value)} Minutes"
            MDSlider:
                id: seconds
                min: 0
                max: 60
                value: 0
                step: 1
                orientation: "vertical"
                size_hint_y: None
                height: '140dp'
                on_value: slider_seconds_label.text = f"{int(self.value)} Seconds"

        MDRaisedButton:
            text: "Begin / Reset"
            size_hint: root.width, 0.3
            font_name: 'Fonts/Shrikhand-Regular.ttf'
            font_size: 20
            on_press: root.begin_btn()
        
        MDLabel:
            id: timer
            # text: "Hr: 0  Min: 0  Sec: 0"
            text: "0 : 0 : 0"
            halign: "center"
            font_name: 'Fonts/Shrikhand-Regular.ttf'
            font_size: 30
            theme_text_color: "Custom"
            text_color: "violet"
            
            


