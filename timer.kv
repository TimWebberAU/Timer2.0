<TimerLayout>

    hours: hours
    minutes: minutes
    seconds: seconds

    GridLayout:
        cols: 1
        size: root.width, root.height
        spacing: 20

        Label:
            text: "ENTER A TIME"
            size_hint: root.width, 0.3

        GridLayout:
            cols: 3

            Label:
                id: slider_hours_label
                text: "0 Hours"
                size_hint: root.width, 0.1
            Label:
                id: slider_minutes_label
                text: "0 Minutes"
                size_hint: root.width, 0.1
            Label:
                id: slider_seconds_label
                text: "0 Seconds"
                size_hint: root.width, 0.1

            Slider:
                id: hours
                min: 0
                max: 24
                value: 0
                step: 1
                orientation: "vertical"
                on_value: slider_hours_label.text = f"{int(self.value)} Hours"
            
            Slider:
                id: minutes
                min: 0
                max: 60
                value: 0
                step: 1
                orientation: "vertical"
                on_value: slider_minutes_label.text = f"{int(self.value)} Minutes"

            Slider:
                id: seconds
                min: 0
                max: 60
                value: 0
                step: 1
                orientation: "vertical"
                on_value: slider_seconds_label.text = f"{int(self.value)} Seconds"

        Button:
            text: "Begin"
            size_hint: root.width, 0.3
            font_size: 20
            on_press: root.timer_display()
        
        Label:
            id: timer
            text: ""
            size_hint: root.width, 0.2
            


