<TimerLayout>

    hours: hours
    minutes: minutes
    seconds: seconds

    MDGridLayout:
        cols: 1
        size: root.width, root.height
        size_hint_y: None

        MDLabel:
            text: "NEEDY  TIMER"
            halign: "center"
            font_name: 'Fonts/Shrikhand-Regular.ttf'
            font_size: 30
            size_hint_y: None
            theme_text_color: "Custom"
            text_color: "violet"

        MDGridLayout:
            cols: 3

            MDLabel:
                id: slider_hours_label
                text: "0 Hrs"
                halign: "center"
                theme_text_color: "Primary"
                size_hint_y: None
                height: dp(30)
            MDLabel:
                id: slider_minutes_label
                text: "0 Mins"
                halign: "center"
                theme_text_color: "Primary"
                size_hint_y: None
                height: dp(30)
            MDLabel:
                id: slider_seconds_label
                text: "0 Secs"
                halign: "center"
                theme_text_color: "Primary"
                size_hint_y: None
                height: dp(30)

            MDSlider:
                id: hours
                min: 0
                max: 24
                value: 0
                step: 1
                orientation: "vertical"
                height: '140dp'
                on_value: slider_hours_label.text = f"{int(self.value)} Hrs"
            MDSlider:
                id: minutes
                min: 0
                max: 60
                value: 0
                step: 1
                orientation: "vertical"
                height: '140dp'
                on_value: slider_minutes_label.text = f"{int(self.value)} Mins"
            MDSlider:
                id: seconds
                min: 0
                max: 60
                value: 0
                step: 1
                orientation: "vertical"
                height: '140dp'
                on_value: slider_seconds_label.text = f"{int(self.value)} Secs"

            MDRaisedButton:
                id: begin
                text: "Begin"
                size_hint: root.width, 0.3
                font_name: 'Fonts/Shrikhand-Regular.ttf'
                font_size: 16
                halign: "center"
                on_press: root.begin_btn()
            MDRaisedButton:
                id: pause
                text: "Pause"
                disabled: True
                size_hint: root.width, 0.3
                font_name: 'Fonts/Shrikhand-Regular.ttf'
                font_size: 16
                halign: "center"
                on_press: root.pause_btn()
            MDRaisedButton:
                id: stop
                text: "Stop"
                disabled: True
                size_hint: root.width, 0.3
                font_name: 'Fonts/Shrikhand-Regular.ttf'
                font_size: 16
                halign: "center"
                on_press: root.stop_btn()
        
        MDLabel:
            id: timer
            text: "0 : 0 : 0"
            halign: "center"
            font_name: 'Fonts/Shrikhand-Regular.ttf'
            font_size: 40
            size_hint_y: None
            theme_text_color: "Custom"
            text_color: "violet"
            
            


